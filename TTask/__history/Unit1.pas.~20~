unit Unit1;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls, Vcl.ComCtrls, Math, Threading;

type
  TForm1 = class(TForm)
    ProgressBar1: TProgressBar;
    ProgressBar2: TProgressBar;
    ProgressBar3: TProgressBar;
    ProgressBar4: TProgressBar;
    Button1: TButton;
    Button2: TButton;
    Button3: TButton;
    Button4: TButton;
    Label1: TLabel;
    procedure FormCreate(Sender: TObject);
    procedure Button1Click(Sender: TObject);
    procedure Button2Click(Sender: TObject);
    procedure Button3Click(Sender: TObject);
    procedure Button4Click(Sender: TObject);
  private
    { Private declarations }
    FactiveThreads: Integer;
    procedure UpdateActiveThreadsLabel;
    procedure UpdateProgressBar(Progressbar: TProgressBar; pIncrement: integer);
    procedure EnableButton(Button: TButton);
  public
    { Public declarations }
  end;

var
  Form1: TForm1;

implementation

{$R *.dfm}

procedure TForm1.Button1Click(Sender: TObject);
begin
  // Resetar o progressbar se necessário...
  Self.ProgressBar1.Position := 0;

  // Desabilitar o botão...
  Self.Button1.Enabled := False;

  TTask.Run(
    procedure
    begin
      // Aumenta a contagem quando a thread realmente inicia...
      InterlockedIncrement(FActiveThreads);

      // Atualiza o label para mostrar quantas threads estão rodando...
      UpdateActiveThreadsLabel;

      // Atualiza o progressbar repetidamente até chegar em 100%
      UpdateProgressBar(ProgressBar1, 10);

      // Quando a thread finalizar, decrementa a quantidade de threads ativas em 1
      InterlockedDecrement(FActiveThreads);

      // Atualiza o label com o número atual de threads em execução...
      UpdateActiveThreadsLabel;

      // Reabilita o botão usado para iniciar esta thread...
      EnableButton(Button1);
    end);
end;

procedure TForm1.Button2Click(Sender: TObject);
begin
  // Resetar o progressbar se necessário...
  Self.ProgressBar1.Position := 0;

  // Desabilitar o botão...
  Self.Button2.Enabled := False;

  TTask.Run(
    procedure
    begin
      // Aumenta a contagem quando a thread realmente inicia...
      InterlockedIncrement(FActiveThreads);

      // Atualiza o label para mostrar quantas threads estão rodando...
      UpdateActiveThreadsLabel;

      // Atualiza o progressbar repetidamente até chegar em 100%
      UpdateProgressBar(ProgressBar1, 10);

      // Quando a thread finalizar, decrementa a quantidade de threads ativas em 1
      InterlockedDecrement(FActiveThreads);

      // Atualiza o label com o número atual de threads em execução...
      UpdateActiveThreadsLabel;

      // Reabilita o botão usado para iniciar esta thread...
      EnableButton(Button2);
    end);
end;

procedure TForm1.Button3Click(Sender: TObject);
begin
  // Resetar o progressbar se necessário...
  Self.ProgressBar1.Position := 0;

  // Desabilitar o botão...
  Self.Button3.Enabled := False;

  TTask.Run(
    procedure
    begin
      // Aumenta a contagem quando a thread realmente inicia...
      InterlockedIncrement(FActiveThreads);

      // Atualiza o label para mostrar quantas threads estão rodando...
      UpdateActiveThreadsLabel;

      // Atualiza o progressbar repetidamente até chegar em 100%
      UpdateProgressBar(ProgressBar1, 10);

      // Quando a thread finalizar, decrementa a quantidade de threads ativas em 1
      InterlockedDecrement(FActiveThreads);

      // Atualiza o label com o número atual de threads em execução...
      UpdateActiveThreadsLabel;

      // Reabilita o botão usado para iniciar esta thread...
      EnableButton(Button3);
    end);
end;
procedure TForm1.Button4Click(Sender: TObject);
begin
  // Resetar o progressbar se necessário...
  Self.ProgressBar1.Position := 0;

  // Desabilitar o botão...
  Self.Button4.Enabled := False;

  TTask.Run(
    procedure
    begin
      // Aumenta a contagem quando a thread realmente inicia...
      InterlockedIncrement(FActiveThreads);

      // Atualiza o label para mostrar quantas threads estão rodando...
      UpdateActiveThreadsLabel;

      // Atualiza o progressbar repetidamente até chegar em 100%
      UpdateProgressBar(ProgressBar1, 10);

      // Quando a thread finalizar, decrementa a quantidade de threads ativas em 1
      InterlockedDecrement(FActiveThreads);

      // Atualiza o label com o número atual de threads em execução...
      UpdateActiveThreadsLabel;

      // Reabilita o botão usado para iniciar esta thread...
      EnableButton(Button4);
    end);
end;

procedure TForm1.EnableButton(Button: TButton);
begin
  Button.Enabled := True;
end;

procedure TForm1.UpdateProgressBar(Progressbar: TProgressBar; pIncrement: integer);
begin
  while Progressbar.Position < 100 do
  begin
    Sleep(500); // Simula o progressbar avançando até 100%

    TThread.Queue(nil,
      procedure
      begin
        Progressbar.Position := Min(Progressbar.Position + pIncrement, 100);
        if Progressbar.Position = 100 then
          Progressbar.Enabled := False;
      end);
  end;
end;

procedure TForm1.UpdateActiveThreadsLabel;
begin
  Label1.Caption := 'Active Threads: ' + IntToStr(FactiveThreads);
end;

procedure TForm1.FormCreate(Sender: TObject);
begin
  Self.FactiveThreads := 0;
end;

end.
