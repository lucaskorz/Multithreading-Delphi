unit Unit1;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls, Vcl.ComCtrls, Math, Threading, System.SyncObjs;

type
  TProgressThread = class(TThread)
  private
    FProgressbar: TProgressBar;
    FIncrement: Integer;
    FCriticalSection: TCriticalSection;
  protected
    procedure Execute; override;
  public
    constructor Create(AProgressbar: TProgressBar; AIncrement: Integer);
    destructor Destroy; override;
  end;

  TForm1 = class(TForm)
    ProgressBar1: TProgressBar;
    ProgressBar2: TProgressBar;
    ProgressBar3: TProgressBar;
    ProgressBar4: TProgressBar;
    Button1: TButton;
    Button2: TButton;
    Button3: TButton;
    Button4: TButton;
    Label1: TLabel;
    procedure FormCreate(Sender: TObject);
    procedure Button1Click(Sender: TObject);
    procedure Button2Click(Sender: TObject);
    procedure Button3Click(Sender: TObject);
    procedure Button4Click(Sender: TObject);
  private
    { Private declarations }
    FactiveThreads: Integer;
    procedure UpdateActiveThreadsLabel;
    procedure ThreadTerminated;
  public
    { Public declarations }
  end;

var
  Form1: TForm1;

implementation

{$R *.dfm}

constructor TProgressThread.Create(AProgressbar: TProgressbar; AIncrement: Integer);
begin
  inherited Create(False); // Cria a thread já em execução
  FreeOnTerminate := True; // Libera automaticamente quando terminar
  FProgressbar := AProgressbar;
  FIncrement := AIncrement;
  FCriticalSection := TCriticalSection.Create;
end;

destructor TProgressThread.Destroy;
begin
  FCriticalSection.Free;
  inherited;
end;

procedure TProgressThread.Execute;
begin
  while not Terminated do
  begin
    Sleep(500); // dá a aparência de que algo está acontecendo com o progressbar... anima até completar 100%

    TThread.Synchronize(nil,
      procedure
      begin
        if FProgressbar.Position < 100 then
          FProgressbar.Position := Min(FProgressbar.Position + FIncrement, 100)
        else
          Terminate;
      end);
  end;

  TForm1(Form1).ThreadTerminated;
end;

procedure TForm1.ThreadTerminated;
begin
  // diminui o valor de threads ativas em execução...
  Dec(FActiveThreads);

  // Atualiza o label para mostrar uma thread a menos, já que uma acabou...
  UpdateActiveThreadsLabel;

  if ProgressBar1.Position >= 100 then
  begin
    Button1.Enabled := True;
  end;

  if ProgressBar2.Position >= 100 then
  begin
    Button2.Enabled := True;
  end;

  if ProgressBar3.Position >= 100 then
  begin
    Button3.Enabled := True;
  end;

  if ProgressBar4.Position >= 100 then
  begin
    Button4.Enabled := True;
  end;
end;

procedure TForm1.Button1Click(Sender: TObject);
begin
  // Reseta o progressbar para posição 0 caso esteja reiniciando...
  ProgressBar1.Position := 0;

  // Desabilita o botão que acabou de ser clicado... a thread vai finalizar e reabilitar o botão...
  Button1.Enabled := False;

  // Cria e inicia nossa thread...
  TProgressThread.Create(ProgressBar1, 10);

  Inc(FActiveThreads);
  UpdateActiveThreadsLabel;
end;

procedure TForm1.Button2Click(Sender: TObject);
begin
  // Resetar o progressbar se necessário...
  Self.ProgressBar2.Position := 0;

  // Desabilitar o botão...
  Self.Button2.Enabled := False;

  // Cria e inicia nossa thread...
  TProgressThread.Create(ProgressBar2, 10);

  Inc(FActiveThreads);
  UpdateActiveThreadsLabel;
end;

procedure TForm1.Button3Click(Sender: TObject);
begin
  // Resetar o progressbar se necessário...
  Self.ProgressBar3.Position := 0;

  // Desabilitar o botão...
  Self.Button3.Enabled := False;

  // Cria e inicia nossa thread...
  TProgressThread.Create(ProgressBar3, 10);

  Inc(FActiveThreads);
  UpdateActiveThreadsLabel;
end;

procedure TForm1.Button4Click(Sender: TObject);
begin
  // Resetar o progressbar se necessário...
  Self.ProgressBar4.Position := 0;

  // Desabilitar o botão...
  Self.Button4.Enabled := False;

  // Cria e inicia nossa thread...
  TProgressThread.Create(ProgressBar4, 10);

  Inc(FActiveThreads);
  UpdateActiveThreadsLabel;
end;

procedure TForm1.UpdateActiveThreadsLabel;
begin
  Label1.Caption := 'Active Threads: ' + IntToStr(FactiveThreads);
end;

procedure TForm1.FormCreate(Sender: TObject);
begin
  Self.FactiveThreads := 0;
end;

end.
